# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://localhost:27017/autoregistro
MONGODB_POOL_SIZE=10
MONGODB_TIMEOUT=5000

# JWT Authentication
JWT_SECRET=your_super_secret_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Bcrypt
BCRYPT_ROUNDS=10

# Serial Port Configuration
SERIAL_PORT=COM8
SERIAL_BAUDRATE=115200

# Terminal Configuration
TERMINAL_IPS=192.168.1.201,192.168.1.202,192.168.1.208

# External Services
CALLBACK_BASE_URL=http://192.168.1.2:3000
TERMINAL_BASE_URL=http://192.168.1.201:8090

# Apitude API - Integración con Registraduría/ANI
# Obtener API key en: https://apitude.co/es/contact/
APITUDE_API_KEY=your_apitude_api_key_here

# ElevenLabs TTS (Text-to-Speech) - OPCIONAL
# Obtener API key en: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=pNInz6obpgDQGcFmaJgB

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log
LOG_ERROR_FILE=logs/error.log

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Timezone
TIMEZONE_OFFSET=-5
